<div>
    <div>
        <h2>{{post.title}}</h2>
        <div> Posted by {{post.User.username}} on {{format_date post.createdAt}}</div>
    </div>
    <div>
        {{post.body}}
    </div>
</div>

{{#if post.Comments}}
<div>
    <div>
        <h3>Comments</h3>
    </div>

    <div>
        {{#each post.Comments}}
    <div>
        <p>{{body}}</p>
        <p>{{User.username}} on {{format_date createdAt}}</p>
    </div>

        {{/each}}
    </div>
</div>
{{/if}}

<form class="form comment-form">
    <h2>Add Comment</h2>

  <div class="form-group">
      <input type="hidden" name="postId" value="{{post.id}}"/>
    <label for="commentBody">Comment:</label>
    <textarea
      class="form-input"
      id="blog-post"
      name="commentBody"
    ></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Post</button>
  </div>
</form>

<script src="/js/comment.js"></script>